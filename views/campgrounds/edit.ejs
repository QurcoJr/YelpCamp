<%- include('../partials/header'); %>

<div class="container mt-3">
    <h2 class="mb-4 text-center">Edit <%= campground.name %></h2>
    <div class="m-auto" style="width: 100%; max-width: 400px;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" autocomplete="off"
                    value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" autocomplete="off"
                    value="<%= campground.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" autocomplete="off"
                    value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" autocomplete="off"
                    value="<%= campground.description %>">
            </div>
            <button class="btn btn-primary btn-lg btn-block mb-2">Submit!</button>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>



    <%- include('../partials/footer'); %>