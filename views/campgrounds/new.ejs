<%- include('../partials/header'); %>


<div class="container mt-3">
<h2 class="mb-4 text-center">Create a new campground</h2>
<div class="m-auto" style="width: 100%; max-width: 400px;">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Name" autocomplete="off">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01"
                autocomplete="off">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image url" autocomplete="off">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="Descritpion" autocomplete="off">
        </div>
        <button class="btn btn-primary btn-lg btn-block mb-2">Submit!</button>
    </form>
    <a href="/campgrounds">Go back</a>
</div>



<%- include('../partials/footer'); %>