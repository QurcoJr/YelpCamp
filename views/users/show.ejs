<%- include('../partials/header') %>
<div class="container mt-3 mb-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="<%= user.avatar %>" alt="user profile image" class="card-image-top"
                    style="max-height: 300px;">
                <div class="card-body">
                    <h5 class="card-title"><%= user.firstName + " " + user.lastName %></h5>
                    <p class="card-text"><%= user.about %></p>
                    <a href="mailto:<%= user.email %>" class="btn btn-primary"><%= user.email %></a>
                    <% if (currentUser && currentUser.id === user.id) { %>
                    <a href="<%= currentUser.id %>/edit" class="btn btn-warning text-white">Edit</a>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h3><%= user.firstName %>'s campgrounds:</h3>
            <% campgrounds.forEach(function (camp) {  %>
            <div class="card mb-5">
                <img class="card-img-top" src="<%= camp.image %>">
                <div class="card-body">
                    <h5 class="card-title"> <%= camp.name %> </h5>
                    <p class="card-text"> </p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
            <% }); %>
        </div>


        <%- include('../partials/footer') %>