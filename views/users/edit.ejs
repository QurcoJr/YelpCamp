<%- include('../partials/header'); %>

<div class="container mt-3 mb-5">
    <h2 class="mb-4 text-center">Edit Personal Info</h2>
    <div style="width: 30%; margin: 25px auto 80px;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" placeholder="<%= user.username %>"
                    disabled>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="user[password]" placeholder="Password"
                    autocomplete="off" disabled>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstName]" placeholder="First Name"
                    value="<%= user.firstName %>" autocomplete="off">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastName]" placeholder="Last Name"
                    value="<%= user.lastName %>" autocomplete="off">
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="user[email]" placeholder="E-mail"
                    value="<%= user.email %>" autocomplete="off">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[avatar]" placeholder="Avatar url"
                    value="<%= user.avatar %>" autocomplete="off">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[about]" placeholder="Tell us about you"
                    value="<%= user.about %>" autocomplete="off">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
        </form>
        <a href="/users/<%= user._id %>">Go Back</a>
        </div>




        <%- include('../partials/footer'); %>